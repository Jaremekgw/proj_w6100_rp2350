{
    "cmake.showSystemKits": false,
    "cmake.options.statusBarVisibility": "hidden",
    "cmake.options.advanced": {
        "build": {
            "statusBarVisibility": "hidden"
        },
        "launch": {
            "statusBarVisibility": "hidden"
        },
        "debug": {
            "statusBarVisibility": "hidden"
        }
    },
    "clangd.arguments": [
        "--query-driver=**/arm-none-eabi-gcc"
    ],
    // ðŸ‘‡ Tell CMake Tools to use presets only
    "cmake.useCMakePresets": "always",
    "cmake.defaultConfigurePreset": "pico",
    "cmake.configureOnOpen": false,

    // ðŸ‘‡ Hard-pin CMake in vscode for pico project
    "cmake.cmakePath": "/home/jaremekg/.pico-sdk/cmake/v3.31.5/bin/cmake",
    // ðŸ‘‡ Add this block to navigate in editor, click causes jump to function
    "editor.gotoLocation.enabled": true,
    
    "cmake.buildOutput": "terminal",
    "cmake.terminal": "integrated",
    // ðŸ‘‡ Add this block to get clickable file links
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.configureOnEdit": true,
    "cmake.automaticReconfigure": true,
    // "cmake.configureOnOpen": true,     because is false above
    "cmake.generator": "Ninja",
    // ðŸ‘‡ Add this block to tell CMake where to find the Ninja binary
    "cmake.configureSettings": {
        "CMAKE_MAKE_PROGRAM": "${env:HOME}/.pico-sdk/ninja/v1.12.1/ninja"
    },
    "cmake.cmakePath": "${userHome}/.pico-sdk/cmake/v3.31.5/bin/cmake",
    "C_Cpp.debugShortcut": false,
    // ðŸ‘‡ Added those 3 lines to fix IntellSense
    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.default.configurationProvider": "",
    "C_Cpp.default.compileCommands": "${workspaceFolder}/build/compile_commands.json",
    // "C_Cpp.errorSquiggles": "disabled",
    "C_Cpp.default.compilerPath": "/usr/bin/arm-none-eabi-gcc",
    "C_Cpp.default.intelliSenseMode": "linux-gcc-arm",


    "terminal.integrated.env.windows": {
        "PICO_SDK_PATH": "${env:USERPROFILE}/.pico-sdk/sdk/2.2.0",
        "PICO_TOOLCHAIN_PATH": "${env:USERPROFILE}/.pico-sdk/toolchain/14_2_Rel1",
        "Path": "${env:USERPROFILE}/.pico-sdk/toolchain/14_2_Rel1/bin;${env:USERPROFILE}/.pico-sdk/picotool/2.2.0-a4/picotool;${env:USERPROFILE}/.pico-sdk/cmake/v3.31.5/bin;${env:USERPROFILE}/.pico-sdk/ninja/v1.12.1;${env:PATH}"
    },
    "terminal.integrated.env.osx": {
        "PICO_SDK_PATH": "${env:HOME}/.pico-sdk/sdk/2.2.0",
        "PICO_TOOLCHAIN_PATH": "${env:HOME}/.pico-sdk/toolchain/14_2_Rel1",
        "PATH": "${env:HOME}/.pico-sdk/toolchain/14_2_Rel1/bin:${env:HOME}/.pico-sdk/picotool/2.2.0-a4/picotool:${env:HOME}/.pico-sdk/cmake/v3.31.5/bin:${env:HOME}/.pico-sdk/ninja/v1.12.1:${env:PATH}"
    },
    "terminal.integrated.env.linux": {
        "PICO_SDK_PATH": "${env:HOME}/.pico-sdk/sdk/2.2.0",
        "PICO_TOOLCHAIN_PATH": "${env:HOME}/.pico-sdk/toolchain/14_2_Rel1",
        "PATH": "${env:HOME}/.pico-sdk/toolchain/14_2_Rel1/bin:${env:HOME}/.pico-sdk/picotool/2.2.0-a4/picotool:${env:HOME}/.pico-sdk/cmake/v3.31.5/bin:${env:HOME}/.pico-sdk/ninja/v1.12.1:${env:PATH}"
    },
    "raspberry-pi-pico.cmakeAutoConfigure": false,
    "raspberry-pi-pico.useCmakeTools": false,
    "raspberry-pi-pico.cmakePath": "${HOME}/.pico-sdk/cmake/v3.31.5/bin/cmake",
    "raspberry-pi-pico.ninjaPath": "${HOME}/.pico-sdk/ninja/v1.12.1/ninja",
    "files.associations": {
        "critical_section.h": "c",
        "irq.h": "c",
        "stdio.h": "c",
        "ws2815_control_dma_parallel.h": "c",
        "dma.h": "c",
        "pio.h": "c",
        "loopback.h": "c",
        "cstdint": "c",
        "port_common.h": "c",
        "stdint.h": "c",
        "network.h": "c",
        "cstring": "c",
        "variant": "c",
        "compare": "c",
        "config.h": "c"
    },
    "C_Cpp.default.compilerPath": "/usr/bin/arm-none-eabi-gcc"
}
